{
    "env": {
        "node": true,
        "es2022": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "prefer-const": "error",
        "no-var": "error"
    }
}
